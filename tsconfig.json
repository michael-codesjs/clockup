{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "outDir": "bin",
    "moduleResolution": "node",
    "noUnusedLocals": false, // TODO: set to true after refactor
    "noUnusedParameters": false, // TODO: set to true after refactor
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "**/*.js", "framework/entities/alarm/alarm.tsp",
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
  ],
  "typeAcquisition": {
    "include": ["jest"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "./docs"
  }
}